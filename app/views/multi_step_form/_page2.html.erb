<div class="row">
  <div class="col-4">
    <div class="form-wrapper">
      <ul class="form-step-list">
        <li>2/3 Complete
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width: 67%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </li>
        <li>1. Candidate Info</li>
        <li><b>2. Prev Employer Info</b></li>
        <li>3. Acceptance/Submission</li>
      </ul>  
    </div>
  </div>
  <div class="col-6">
    <div class="form-wrapper">
      <div class="panel-heading">Previous Employer Info</div>
      <p class="text-center sub-title">Please enter information for each of your previous employers.</p>

      <%= f.fields_for :districts do |cf| %>
        <div class="district-form-container">
          <div class="form-group">
            <div class="form-icon"><i class="fa fa-user"></i></div>
            <%= cf.text_field :name, :placeholder=>"Name", :class => 'form-control district_name'%>
            <span class="district_name_error"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-file"></i></div>
            <%= cf.text_field :nces, :placeholder=>"*NCES", :class => 'form-control district_nces' %>
            <span class="district_nces_error"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-address-book"></i></div>
            <%= cf.text_field :contact, :placeholder=>"District Contact", :class => 'form-control district_contact' %>
            <span class="district_contact_error"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-envelope"></i></div>
            <%= cf.email_field :email, :placeholder=>"District Contact Email Address", :class => 'form-control district_email' %>
            <span class="district_email_error"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-phone"></i></div>
            <%= cf.number_field :phone_number, :placeholder=>"District Phone Number", :class => 'form-control district-phone-number'%>
            <span class="errmsg"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-map-marker"></i></div>
            <%= cf.text_area :street_address, :placeholder=>"*Street Address", :class => 'form-control district_street_address'%>
            <span class="district_street_address_error"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-building"></i></div>
            <%= cf.select :state, options_for_select(User::SELECT_STATE_OPTION), {:prompt => "Select state" }, :class => 'form-control district_state' %>
            <%#= cf.text_field :state, :placeholder=>"*State", :class => 'form-control' %>
            <span class="district_state_error"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-building"></i></div>
            <%= cf.text_field :city, :placeholder=>"*City", :class => 'form-control district_city' %>
            <span class="district_city_error"></span>
          </div>

          <div class="form-group">
            <div class="form-icon"><i class="fa fa-user"></i></div>
            <%= cf.number_field :zip_code, :placeholder=>"*Zip Code", :class => 'form-control district_zip_code' %>
            <span class="district_zip_code_error"></span>
          </div>
        </div>
        <%#= cf.link_to_remove "Remove this task" %>
      <% end %>

      <p>
        <%= f.link_to_add :districts do %>
          <i class="fa fa-plus-circle add-user"><span>add employer</span></i>
        <% end %>  
      </p>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
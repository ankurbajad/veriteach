<div class="row">
  <div class="col-4">
    <div class="form-wrapper">
      <ul class="form-step-list">
        <li>4/7 Complete
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width: 57%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </li>
        <li>1. District Employee Info</li>
        <li>2. Email verification</li>
        <li>3. District Info</li>
        <li><b>4. Employment info</b></li>
        <li>5. Performance Reviews</li>
        <li>6. Insurance</li>
        <li>7. Acceptance/Submit</li>
      </ul>  
    </div>
  </div>
  <div class="col-8">
    <div class="form-wrapper">
      <div class="panel-heading">Employer Info</div>
      <p class="text-center sub-title">Please enter information for employee.</p>
      <%= form_tag districts_path, remote: true do %>
        <div class="row">
          <div class="col-6">
            <div class="district-form-container">
              <div class="form-group">
                <div class="form-icon"><i class="fa fa-building"></i></div>
                <%= hidden_field_tag :step, "forth" %>
                <%= text_field_tag :first_name,  "", :placeholder=> 'School or Institution', :class => 'form-control company_name' %>
              </div>

              <div class="form-group">
                <div class="form-icon"><i class="fa fa-list-ol"></i></div>
                <%= text_field_tag :last_name, "", :placeholder=> '*NCES Number', :class => 'form-control company_contact_name' %>
              </div>

              <div class="form-group">
                <div class="form-icon"><i class="fa fa-phone"></i></div>
                <%= text_field_tag :job_title,"", :placeholder=> '*School Street Address', :class => 'form-control company_email' %>
              </div>

              <div class="form-group">
                <div class="form-icon"><i class="fa fa-map-marker"></i></div>
                <%= number_field_tag :phone_number, "", :placeholder=> '*Schools State', :class => 'form-control company_zip_code' %>
                <span class="company_zip_code_error"></span>
              </div>
              <div class="form-group">
                <div class="form-icon"><i class="fa fa-map-marker"></i></div>
                <%= number_field_tag :phone_number, "", :placeholder=> '*Schools City', :class => 'form-control company_zip_code' %>
                <span class="company_zip_code_error"></span>
              </div>
              <div class="form-group">
                <div class="form-icon"><i class="fa fa-list-alt"></i></div>
                <%= number_field_tag :phone_number, "", :placeholder=> '*Schools Zip Code', :class => 'form-control company_zip_code' %>
                <span class="company_zip_code_error"></span>
              </div>
              <center><small>*Auto populate</small></center>
            </div>   
          </div>
          <div class="col-6">
            <div class="district-form-container employer-form-right">
              <div class="form-group">
                <%= number_field_tag :phone_number, "", :placeholder=> 'Position', :class => 'form-control' %>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-6">
                    <%= number_field_tag :phone_number, "", :placeholder=> 'Grade', :class => 'form-control' %>
                  </div>
                  <div class="col-6">
                    <%= number_field_tag :phone_number, "", :placeholder=> 'Subject', :class => 'form-control' %>
                  </div>
                </div>
              </div>
              <div class="border-box form-group">
                <p class="sub-title"><center>Dates of service</center></p>
                  <div class="row">
                    <div class="col-6">
                      <div class="form-group">
                        <div class="form-icon"><i class="fa fa-calendar"></i></div>
                        <%= text_field_tag :one, session[:district].present? ? session[:district]["accrededation_end"].present? ? session[:district]["accrededation_end"] : "" : "", :placeholder=> 'To', :class => 'form-control datepicker' %>
                      </div>  
                    </div>
                    <div class="col-6">
                      <div class="form-group">
                        <div class="form-icon"><i class="fa fa-calendar"></i></div>
                        <%= text_field_tag :two, session[:district].present? ? session[:district]["accrededation_end"].present? ? session[:district]["accrededation_end"] : "" : "", :placeholder=> 'To', :class => 'form-control datepicker' %>
                      </div>  
                    </div>
                  </div>
              </div>

              <div class="border-box form-group">
                <center>Days in Full Contract Year</center>
                  <div class="row">
                    <div class="col">
                      <div class="form-group">
                        <center><%= number_field_tag :phone_number, "", :placeholder=> '000', :class => 'form-control small-input' %> </center>
                      </div>  
                    </div>
                  </div>
              </div>

              <div class="border-box form-group">
                <center>Employment Status</center>
                <div class="form-group salary-inputs">
                  <div class="border-box">
                    <center>
                      <span>
                      <%= radio_button_tag 'salary_inclusion', 'yes' %>
                      <%= label_tag :salary_inclusion, 'Fulltime' %></span>
                      <span>
                      <%= radio_button_tag 'salary_inclusion', 'no', true %>
                      <%= label_tag :salary_inclusion, 'Part time'  %></span>
                      
                    </center>
                  </div>
                </div>
              </div>
              <div class="border-box form-group">
                <center>Days in Full Contract Year</center>
                  <div class="row">
                    <div class="col">
                      <div class="form-group">
                        <center><%= number_field_tag :phone_number, "", :placeholder=> '000', :class => 'form-control small-input' %> </center>
                      </div>  
                    </div>
                  </div>
              </div>
              <div class="border-box form-group">
                <center>Was Certificate held at time of service?</center>
                <div class="form-group salary-inputs">
                  <div class="border-box">
                    <center>
                      <span>
                      <%= radio_button_tag 'salary_inclusion', 'yes' %>
                      <%= label_tag :salary_inclusion, 'Yes' %></span>
                      <span>
                      <%= radio_button_tag 'salary_inclusion', 'no', true %>
                      <%= label_tag :salary_inclusion, 'No'  %></span>
                      
                    </center>
                  </div>
                </div>
              </div>
              <div class="border-box form-group">
                <center>Eligible for immediate reÂ­employment</center>
                <div class="form-group salary-inputs">
                  <div class="border-box">
                    <center>
                      <span>
                      <%= radio_button_tag 'salary_inclusion', 'yes' %>
                      <%= label_tag :salary_inclusion, 'Yes' %></span>
                      <span>
                      <%= radio_button_tag 'salary_inclusion', 'no', true %>
                      <%= label_tag :salary_inclusion, 'No'  %></span>
                      
                    </center>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="field district-btn">
            <center>
              <%= submit_tag "Next", :class => "btn btn-success submit-btn" %>
            </center>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
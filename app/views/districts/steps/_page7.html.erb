<div class="row">
  <div class="col-4">
    <div class="form-wrapper">
      <ul class="form-step-list">
        <li>7/7 Complete
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width: 100%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </li>
        <li>1. District Employee Info</li>
        <li>2. Email verification</li>
        <li>3. District Info</li>
        <li>4. Employment info</li>
        <li>5. Performance Reviews</li>
        <li>6. Insurance</li>
        <li><b>7. Acceptance/Submit</b></li>
      </ul>  
    </div>
  </div>
  <div class="col-6">
    <div class="form-wrapper">
      <div class="panel-heading">TERMS OF ACCEPTANCE AND SIGNATURE</div>
      </br>
      <p class="text-center sub-title">I, the [applicant, requestor, etc.] for this verification request, warrant the truthfulness of the information provided in this application.</p>
      <%= form_tag districts_path, remote: true do %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-5">
              <label>Electronic Signature</label>
            </div>
            <div class="col-md-7">
              <%= hidden_field_tag :step, "seventh" %>
              <%= text_field_tag :district_electronic_signature, session[:district_electronic_signature].present? ? session[:district_electronic_signature] : "", :placeholder=> 'Candidates Name', :class => 'form-control company_name' %>
              <small>Please type first and last name</small>
            </div>
          </div>
          <div class="row">
            <div class="col-md-5">
              *Acceptance Checkbox
            </div>
            <div class="col-md-7">
            </div>
          </div>
        </div>
        </br>
        <div class="clearfix"></div>
        <div class="form-group">
          <span class="check-box">
            <input type="checkbox" id='check', required="true" />
          </span>
          <div class="extra-wrap">
            <label for="check" class="checkdata">I understand that checking this box constitutes a legal signature confirming that I acknowledge and agree to the above</label>
            <p><a href="javascript:void(0)" class="terms-conditions">Terms of Acceptance</a></p>
          </div> 
        </div>
        <div class="field">
          <%= submit_tag "Submit", :class => "btn btn-success submit-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-4">
    <div class="form-wrapper">
      <ul class="form-step-list">
        <li>3/7 Complete
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width: 42%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </li>
        <li>1. District Employee Info</li>
        <li>2. Email verification</li>
        <li><b>3. District Info</b></li>
        <li>4. Employment info</li>
        <li>5. Performance Reviews</li>
        <li>6. Insurance</li>
        <li>7. Acceptance/Submit</li>
      </ul>  
    </div>
  </div>
  <div class="col-8">
    <div class="form-wrapper">
      <div class="panel-heading">District Information</div>
      <p class="text-center sub-title">Please enter information for district.</p>
      <%#= form_tag districts_path, remote: true do %>
      <%= form_for @district, url: districts_path, remote: true do |f| %>
        <%= f.hidden_field :name %>
        <div class="row">
          <div class="col-6">
            <div class="district-form-container">
              <div class="form-group">
                <div class="form-icon"><i class="fa fa-building"></i></div>
                <%= hidden_field_tag :step, "third" %>
                <%= text_field_tag :name, session[:district].present? ? session[:district]["name"].present? ? session[:district]["name"] : "" : "", :placeholder=> 'District or Institution', :class => 'form-control' %>
              </div>

              <div class="form-group">
                <div class="form-icon"><i class="fa fa-list-ol"></i></div>
                <%= number_field_tag :nces, session[:district].present? ? session[:district]["nces"].present? ? session[:district]["nces"] : "" : "", :placeholder=> '*NCES Number', :class => 'form-control', required: true %>
              </div>

              <div class="form-group">
                <div class="form-icon"><i class="fa fa-phone"></i></div>
                <%= number_field_tag :phone_number, session[:district].present? ? session[:district]["phone_number"].present? ? session[:district]["phone_number"] : "" : "", :placeholder=> '*District Phone Number', :class => 'form-control' %>
              </div>

              <div class="form-group">
                <div class="form-icon"><i class="fa fa-address-card"></i></div>
                <%= text_area_tag :street_address, session[:district].present? ? session[:district]["street_address"].present? ? session[:district]["street_address"] : "" : "", :placeholder=> '*District Street Address', :class => 'form-control' %>
              </div>

              <div class="form-group">
                <div class="form-icon"><i class="fa fa-map-marker"></i></div>
                <%= text_field_tag :state, session[:district].present? ? session[:district]["state"].present? ? session[:district]["state"] : "" : "", :placeholder=> '*District State', :class => 'form-control' %>
              </div>
              <div class="form-group">
                <div class="form-icon"><i class="fa fa-map-marker"></i></div>
                <%= text_field_tag :city, session[:district].present? ? session[:district]["city"].present? ? session[:district]["city"] : "" : "", :placeholder=> '*District City', :class => 'form-control' %>
              </div>
              <div class="form-group">
                <div class="form-icon"><i class="fa fa-list-alt"></i></div>
                <%= number_field_tag :zip_code, session[:district].present? ? session[:district]["zip_code"].present? ? session[:district]["zip_code"] : "" : "", :placeholder=> '*District Zip Code', :class => 'form-control' %>
              </div>
              <center><small>*Auto populate</small></center>
            </div>   
          </div>
          <div class="col-6">
            <div class="district-form-container district-form-right">
              <div class="form-group salary-inputs">
                <div class="border-box">
                  <b>
                    <%= label_tag :This_institution_is_a %> </b><br />
                  <span>
                  <%= radio_button_tag 'institution_type', 'public', session[:district].present? ? session[:district]["institution_type"] == "public" ? true : false : false %>
                  <%= label_tag :institution_type, 'Public' %></span>
                  <span>
                  <%= radio_button_tag 'institution_type', 'private', session[:district].present? ? session[:district]["institution_type"] == "private" ? true : false : false %>
                  <%= label_tag :institution_type, 'Private'  %></span>
                </div>
              </div>
              <div class="form-group">
                <%= select_tag "regional_accrededation_agency", options_for_select(User::SELECT_STATE_OPTION, session[:district].present? ? session[:district]["regional_accrededation_agency"].present? ? session[:district]["regional_accrededation_agency"] : "" : ""), :class => 'form-control', :prompt => "Regional Accrededation Agency" %>
              </div>
              <div class="form-group">
                <%= select_tag "state_of_accrededation", options_for_select(User::SELECT_STATE_OPTION, session[:district].present? ? session[:district]["state_of_accrededation"].present? ? session[:district]["state_of_accrededation"] : "" : ""), :class => 'form-control', :prompt => "State of Accrededation" %>
              </div>
            </div>
            <div class="form-group salary-inputs">
              <b>
                <%= label_tag :Dates_of_Accrededation %> </b><br />
            </div>
            <div class="form-group">
              <div class="form-icon"><i class="fa fa-calendar"></i></div>
              <%= text_field_tag :accrededation_start, session[:district].present? ? session[:district]["accrededation_start"].present? ? session[:district]["accrededation_start"] : "" : "", :placeholder=> 'From', :class => 'form-control datepicker' %>
            </div>
            <div class="form-group">
              <div class="form-icon"><i class="fa fa-calendar"></i></div>
              <%= text_field_tag :accrededation_end, session[:district].present? ? session[:district]["accrededation_end"].present? ? session[:district]["accrededation_end"] : "" : "", :placeholder=> 'To', :class => 'form-control datepicker' %>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="field district-btn">
            <center>
              <%= submit_tag "Next", :class => "btn btn-success submit-btn" %>
            </center>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
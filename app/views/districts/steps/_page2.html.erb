<div class="row">
  <div class="col-4">
    <div class="form-wrapper">
      <ul class="form-step-list">
        <li>2/7 Complete
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width: 28%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </li>
        <li>1. District Employee Info</li>
        <li><b>2. Email verification</b></li>
        <li>3. District Info</li>
        <li>4. Employment info</li>
        <li>5. Performance Reviews</li>
        <li>6. Insurance</li>
        <li>7. Acceptance/Submit</li>
      </ul>  
    </div>
  </div>
  <div class="col-6">
    <div class="form-wrapper">
			<div class="panel-heading">Now lets make sure you are real by
verifying your email!</div>
			<p class="text-center sub-title">Please enter the code sent to the email you provided.</p>
			<%#= form_tag districts_path, remote: true do %>
      <%= form_for @district, url: districts_path, remote: true do |f| %>
        <%= f.hidden_field :name %>
			<div class="district-form-container">
			  <div class="form-group">
			    <div class="form-icon"><i class="fa fa-building"></i></div>
			    <%= hidden_field_tag :step, "second" %>
			    <%= number_field_tag :email_verify_code, session[:email_verify_code].present? ? session[:email_verify_code] : "", :placeholder=> 'Code', :class => 'form-control' %>
			  </div>
			</div>
			<div class="field">
			  <%= submit_tag "Next", :class => "btn btn-success submit-btn" %>
			</div>
			<% end %>
			<div class="clearfix"></div>
		</div>
	</div>
</div>



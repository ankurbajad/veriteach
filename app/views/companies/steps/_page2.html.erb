<div class="row">
  <div class="col-4">
    <div class="form-wrapper">
      <ul class="form-step-list">
        <li>2/4 Complete
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width: 50%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </li>
        <li>1. Requester Info</li>
        <li><b>2. Email verification</b></li>
        <li>3. Employee Info</li>
        <li>4. Acceptance/Submission</li>
      </ul>  
    </div>
  </div>
  <div class="col-6">
    <div class="form-wrapper">
			<div class="panel-heading">Now lets make sure you are real by
			verifying your email!</div>
			<p class="text-center sub-title">Please enter the code sent to the email you provided.</p>
			<%= form_tag companies_path, remote: true do %>
			<div class="district-form-container">
			  <div class="form-group">
			    <div class="form-icon"><i class="fa fa-building"></i></div>
			    <%= hidden_field_tag :step, "second" %>
			    <%= number_field_tag :email_verify, session[:email_verify].present? ? session[:email_verify] : "", :placeholder=> 'Code', :class => 'form-control company_name' %>
			  </div>
			</div>
			<div class="field">
			  <%= submit_tag "Next", :class => "btn btn-success submit-btn" %>
			</div>
			<% end %>
			<div class="clearfix"></div>
		</div>
	</div>
</div>


